<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="/css/halfmoon-variables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/HomePage.css">
    <link rel="stylesheet" href="/css/Admin.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - AdminUsers</title>
</head>

<body>
    <div class="page-wrapper with-navbar with-sidebar with-navbar-fixed-bottom"
        data-sidebar-type="overlayed-sm-and-down">
        <div class="sticky-alerts"></div>
        <nav class="navbar" style="background-color: rgb(35,35,35);">
            <h1 class="With">Mult <span class="Red">Cell</span></h1>
            <div class="Exit">
                <h1 class="Exit-Title">Sair</h1>
            </div>
        </nav>
        <div class="sidebar-overlay" onclick="halfmoon.toggleSidebar()"></div>
        <div class="sidebar">
            <div class="sidebar-menu">
                <a href="#" class="sidebar-brand">
                    DashBoard
                </a>
                <div class="sidebar-content">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <h5 class="sidebar-title">Clientes</h5>
                <div class="sidebar-divider"></div>
                <a href="/Admin" id="Budget-Link" class="sidebar-link">Orçamentos</a>
                <a href="/Admin/Emails" class="sidebar-link">E-mails</a>
                <br>
                <h5 class="sidebar-title">Funcionários</h5>
                <div class="sidebar-divider"></div>
                <a href="/Admin" id="Collaborator" class="sidebar-link">Cadastrar novos Funcionários</a>
                <a href="/Admin/Delete" id="Delete-Collaborator" class="sidebar-link">Deletar Funcionários</a>
                <a href="/Admin/Update" id="Editar" class="sidebar-link">Editar Funcionários</a>
            </div>
        </div>

        <div class="content-wrapper">
            <div class="Title-Edit">
                <h1 class="Title-Edit-Text">Atualização de funcionário</h1>
            </div>
            <% AdminUsers.forEach(function(AdminUsers){ %>
                <form action="/Admin/Edit" method="POST">
                    <input type="hidden" name="id" value="<%= AdminUsers.id %>">
                    <% }); %>
                    <div class="FormAdd" style="position: relative; top: 8vh;">
                        <label class="required">Dados Pessoais</label>
                        <input name="Name" type="text" class="form-control" placeholder="Nome Completo">
                        <br>
                        <select name="Specialist" class="form-control" id="select-1">
                            <option value="" selected="selected" disabled="disabled">Setor</option>
                            <option value="red">Notebook</option>
                            <option value="blue">Celular</option>
                            <option value="yellow">RH</option>
                        </select>
                        <br>
                        <div class="form-row row-eq-spacing-sm">
                            <div class="col-sm">
                                <input name="CpfUser" type="text" class="form-control" placeholder="CPF"
                                    required="required">
                            </div>
                            <div class="col-sm">
                                <input name="Rg" type="text" class="form-control" placeholder="RG">
                            </div>
                        </div>
                        <div>
                            <label for="day-of-birth" class="required">Data de contratação</label>
                            <div class="form-row row-eq-spacing">
                                <div class="col">
                                    <input name="Day" type="text" class="form-control" id="day-of-birth"
                                        placeholder="Dia" pattern="[0-9]*" inputmode="numeric" required="required">
                                </div>
                                <div class="col">
                                    <input name="Month" type="text" class="form-control" id="month-of-birth"
                                        placeholder="Mês" pattern="[0-9]*" inputmode="numeric" required="required">
                                </div>
                                <div class="col">
                                    <input name="Year" type="text" class="form-control" id="year-of-birth"
                                        placeholder="Ano" pattern="[0-9]*" inputmode="numeric" required="required">
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="form-row row-eq-spacing-md">
                                <div class="col-md-3">
                                    <select name="State" class="form-control" id="state" required="required">
                                        <option value="" selected="selected" disabled="disabled">Estado</option>
                                        <option value="NY">São Paulo</option>
                                        <option value="NJ">Rio de janeiro</option>
                                        <option value="PA">Rio grande do sul</option>
                                    </select>
                                </div>
                                <div class="col-md-9">
                                    <input name="City" type="text" class="form-control" placeholder="Cidade"
                                        required="required">
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <input class="btn btn-primary" type="submit" id="Redirect" value="Atualizar">
                        </div>
                    </div>
                </form>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
        integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
        crossorigin="anonymous"></script>
    <script src="/javascript/halfmoon.js"></script>
    <script src="/javascript/Admin/Admin.js"></script>
    <script src="/javascript/Admin/Edit.js"></script>
</body>